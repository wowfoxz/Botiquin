apiVersion: v1
kind: Secret
metadata:
  name: secret-dev-web-botilyx
  namespace: aplicaciones
type: Opaque
stringData:
  # Base de datos MySQL
  DATABASE_URL: "mysql://usuario:contraseña@host:puerto/base_de_datos"
  
  # Sesión y seguridad
  SESSION_SECRET: "cambiar-por-secret-seguro-de-produccion"
  
  # API de Google (Gemini)
  GOOGLE_API_KEY: "tu-api-key-de-google-gemini"
  
  # Notificaciones Push (VAPID)
  # Generar con: npx web-push generate-vapid-keys
  VAPID_PUBLIC_KEY: "tu-vapid-public-key"
  VAPID_PRIVATE_KEY: "tu-vapid-private-key"
  VAPID_SUBJECT: "mailto:tu-email@dominio.com"
  
  # Procesador de notificaciones
  NOTIFICATION_PROCESSOR_SECRET: "cambiar-por-secret-seguro"
  
  # Variables públicas
  NEXT_PUBLIC_BASE_PATH: "/botilyx"
  NEXT_PUBLIC_API_URL: "http://dev.formosa.gob.ar/botilyx"
  NEXT_PUBLIC_AUTH_USER: "admin"
  NEXT_PUBLIC_AUTH_PASS: "cambiar-contraseña"
  NEXT_PUBLIC_APP_VERSION: "0.1.0"
  NEXT_PUBLIC_VAPID_PUBLIC_KEY: "tu-vapid-public-key"
  
  # Telemetría
  NEXT_TELEMETRY_DISABLED: "1"
  NODE_ENV: "production"

# INSTRUCCIONES:
# 1. Copiar este archivo a 03-secret-botilyx.yaml
# 2. Reemplazar todos los valores de ejemplo con valores reales
# 3. NO subir 03-secret-botilyx.yaml a Git (ya está en .gitignore)

